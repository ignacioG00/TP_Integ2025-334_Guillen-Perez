<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>

    <hr>
        <h1 class="page-title"><%= about %></h1>
    <hr>

    <main id="admin-container">

        <div id="new-admin-container" class="form-container">
            <h3 class="form-title">Alta Administrador</h3>

            <form id="new-admin-form" autocomplete="off">

                <label for="admin-name">Nombre</label>
                <input type="text" name="admin-name" id="admin-name-input" class="form-component" required>

                <label for="admin-mail">Correo</label>
                <input type="email" name="admin-email" id="admin-email-input" class="form-component" required>

                <label for="admin-pass1">Contraseña</label>
                <input type="password" name="admin-pass1" id="admin-pass1-input" class="form-component" required>

                <label for="admin-pass2">Repetir Contraseña</label>
                <input type="password" name="admin-pass2" id="admin-pass2-input" class="form-component" required>
                
                <input type="submit" class="form-component" value="Crear Administrador">
            </form>                

        </div>

    </main>

